pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
  }
  environment {
    GIT_URL = 'https://source.ohsu.edu/OCTRI-Apps/authentication-lib.git'
  }
  parameters {
    string(name: 'VERSION', description: 'The version of the authentication_lib to release.')
  }
  tools {
    maven '3.8.2'
    jdk 'JDK8'
  }
  stages {
    stage('Check Parameters') {
      steps {
        deleteDir()
        checkParams(params)
      }
    }
    stage('Release') {
      steps {
        checkoutMaster(env.GIT_URL)
        octriMavenReleasePrep(env.VERSION)
        octriMavenBuild()
      }
    }
    stage('Next Version') {
      steps {
        octriMavenVersionBump()
        octriMavenBuild()
      }
    }
  }
}
