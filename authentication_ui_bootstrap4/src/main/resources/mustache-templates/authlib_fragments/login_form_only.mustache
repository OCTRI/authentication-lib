{{! This template renders a login form without any wrappers, headings, or error messaging
    for custom login pages. See `login.mustache` or `login_form.mustache` for most uses. }}
<form class="form" action="{{req.contextPath}}/login" method="POST">
	<div class="form-group">
		<label for="username">Username</label>
		<input id="username" name="username" class="form-control" type="text" data-focus />
	</div>

	<div class="form-group">
		<label for="password">Password</label>
		<input id="password" name="password" class="form-control" type="password" />
	</div>

	<div class="form-group">
		{{>authlib_fragments/forms/csrf_input}}
		<button class="btn btn-primary" type="submit">Sign In</button>
		{{#tableBasedEnabled}}
		<a href="{{req.contextPath}}/user/password/forgot" class="btn btn-link">Forgot password</a>
		{{/tableBasedEnabled}}
	</div>
</form>
