<div class="container-fluid">
	 <div class="col-xs-12 col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
		<h3>Change Your Password</h3>
		<form class="form" action="{{req.contextPath}}/user/password/change" method="POST">
			{{#error}}
			<div class="alert alert-danger">
				Please check your passwords and try again.
			</div>
			{{/error}}
			
			<div class="form-group">
				<label for="currentPassword">Current Password</label>
				<input id="currentPassword" name="currentPassword" class="form-control" type="password" autofocus="true" />
			</div>
			
			<div class="form-group">
				<label for="newPassword">New Password</label>
				{{>authlib_fragments/user/password/password_info}}
				<input id="newPassword" name="newPassword" class="form-control" type="password"/>
			</div>

			<div class="form-group">
				<label for="confirmPassword">Confirm New Password</label>
				<input id="confirmPassword" name="confirmPassword" class="form-control" type="password" />
			</div>

			<div class="form-group">
				{{>authlib_fragments/forms/csrf_input}}
				<button class="btn btn-primary" type="submit">Submit</button>
			</div>
		</form>
	</div>
</div>