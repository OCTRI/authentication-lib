{{! This template renders a login form without any container or column wrappers. Use `login.mustache` for default layout. }}
<h3>Please Sign In</h3>
<form class="form" action="{{req.contextPath}}/login" method="POST">
    {{#error}}
    <div class="alert alert-danger">
        Invalid username and password.
    </div>
    {{/error}}

    {{#passwordChanged}}
    <div class="alert alert-success">
        Your password was successfully changed.
    </div>
    {{/passwordChanged}}

    {{#passwordReset}}
    <div class="alert alert-success">
        Your password was successfully reset.
    </div>
    {{/passwordReset}}

    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" name="username" class="form-control" type="text" data-focus />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" class="form-control" type="password" />
    </div>

    <div class="form-group">
        {{>authlib_fragments/forms/csrf_input}}
        <button class="btn btn-primary" type="submit">Sign In</button>
        {{#tableBasedEnabled}}
        <a href="{{req.contextPath}}/user/password/forgot" class="btn btn-link">Forgot password</a>
        {{/tableBasedEnabled}}
    </div>
</form>
